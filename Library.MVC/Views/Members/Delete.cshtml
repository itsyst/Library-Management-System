@model Library.MVC.Models.MemberVm;

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Member</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.SSN)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.SSN)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Member.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Member.Name)
        </dd>
    </dl>


    <form asp-action="Delete">
        <div>
            <input type="hidden" asp-for="Id" value="@Model.Member.Id" />
        </div>
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-outline-danger">Back to List</a>
    </form>

    @if (Model.BlockDelete)
    {
        <hr />
        <p class="alert-info">You can not delete this member because it still has active loans(check loans)</p>

    }
</div>
